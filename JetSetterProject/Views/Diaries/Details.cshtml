                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Private)
                    </dd>
                    <dt class="col-sm-3 badge badge-light">
                        @Html.DisplayNameFor(model => model.Image)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Image)
                    </dd>
                </dl>
            </div>

        <hr />
        <div>
            <a asp-action="Edit" asp-route-id="@Model.DiaryID" class="btn btn-primary" role="button">Edit</a>
            <a asp-action="Index" class="btn btn-primary" role="button">Back to List</a>

        </div>

    </div>
</div>