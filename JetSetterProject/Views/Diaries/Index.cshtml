@model IEnumerable<jetsetterProj.Models.Diary>

@{
    ViewData["Title"] = "Index";
}

<h2>My Diary</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-4">
            <div class="thumbnail">
                <img src=@Html.DisplayFor(modelItem => item.Image) >
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Country)</h3>
                    <h5>@Html.DisplayFor(modelItem => item.City)</h5>
                    <p>@Html.DisplayFor(modelItem => item.DiaryEntry)</p>
                    <p><a asp-action="Delete" asp-route-id="@item.DiaryID" class="btn btn-default" role="button">Delete</a>
                       <a asp-action="Details" asp-route-id="@item.DiaryID" class="btn btn-default" role="button">Details</a>
                    </p>

                </div>
            </div>
        </div>
    }
</div>

