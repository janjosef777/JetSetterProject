@using Microsoft.AspNetCore.Identity
@using  jetsetterProj.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext _context
    @{
        var vendor = _context.Vendors.Where(v => v.UserID == @UserManager.GetUserId(User)).FirstOrDefault();

    }

    @if(SignInManager.IsSignedIn(User))
    {
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)</a>
                </li>
                @if (User.IsInRole("Vendor"))
                {
                    <li><a asp-area="" asp-controller="Vendors" asp-action="Details" asp-route-id="@vendor.VendorID">Vendor Profile</a></li>
                }
                <li>
                    <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
                </li>
            </ul>
        </form>
    }
    else
    {
        <ul class="nav navbar-nav navbar-right">
            <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
            <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
        </ul>
    }